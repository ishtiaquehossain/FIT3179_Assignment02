{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 600,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/ishtiaquehossain/FIT3179_homework09/main/annual_CO2_emissions.csv"},
  "params": [
    {
      "name": "Year_Above",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2020,
        "step": 1,
        "name": "Minimum year"
      }
    },
    {
      "name": "Continent_selection",
      "value":"World",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Entity == Continent_selection"
    },
    {"filter": "year(datum.Year) > Year_Above"}
  ],
  "mark": {"type": "line",  "point": true},
  
  "encoding": {
    "y": {
      "field": "AnnualCO2Emissions",
      "type": "quantitative",
      "title": " CO2 Emission (Million Tonnes)",
      "aggregate": "sum",
      "axis": {"tickCount": 8,"domainColor":"white"}
    },
    "x": {
      "field": "Year", 
      "type": "temporal",
      "axis": {"grid":false, "domainColor":"white", "gridOpacity":0.01}

      },

    "color": "maroon",
      
      "tooltip": [
      {"field": "AnnualCO2Emissions", "aggregate": "sum", "format": ".2f", "type": "quantitative", "title": "CO2 Emission"}, 
      {"field": "Year", "type": "temporal", "title": "Year", "timeUnit":"year"}
    ]
  },
   "config": {
      "background":"",
  "view": {
     "stroke": "transparent",
     "opacity": 0.5
  }
}
}
