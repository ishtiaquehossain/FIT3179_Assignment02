{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A bar chart with negative values. We can hide the axis domain line, and instead use a conditional grid color to draw a zero baseline.",
  "width": 600,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/ishtiaquehossain/FIT3179_Assignment02/main/horizontal_bar.csv"
  },
  "params": [
    {
      "name": "Year_Above",
      "value": 1970,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2014,
        "step": 1,
        "name": "Minimum year"
      }
    }
  ],
  "mark": "bar",
  "transform": [{"filter": "year(datum.Year) == Year_Above"}],
  "encoding": {
    "y": {
      "field": "Entity",
      "type": "nominal",
      "axis": {
        "domain": false,
        "ticks": false,
        "labelAngle": 0,
        "labelPadding": 4
      }
    },
    "x": {
      "field": "Energy imports",
      "type": "quantitative",
      "axis": {
        "gridColor": {
          "condition": {"test": "datum.value === 0", "value": "black"},
          "value": "#ddd"
        },
        "title": "Enery Imports/Exports (%)"
      }
    },
    "color": {"field": "Entity", "type": "nominal"}
  },
  "config": {}
}